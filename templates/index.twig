            <div class="text-card" id="text-card">
  
            </div>
        </div>
      </section>

        <section class="projects" id="projects">
            <ul>
            {% for block in matrixBlocks %}
                <li>
                  {{ block  }}
                </li>
            {% endfor %}
            </ul>
        </section>
  
      <footer>
        <ul class="footer-links">
            <li>
                <a href="https://github.com/christiankastner" title="Github"><i class="fab fa-github"></i></a>
            </li>
            <li>
                <a href="https://www.instagram.com/christianmkast/" title="Instagram"><i class="fab fa-instagram"></i></a>
            </li>
            <li>
                <a href="https://dev.to/ckastner12" title="Blog"><i class="fas fa-blog"></i></a>
            </li>
        </ul>
        </footer>
    </div>
